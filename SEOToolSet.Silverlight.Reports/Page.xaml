<UserControl xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  x:Class="SEOToolSet.Silverlight.Reports.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     >
    <Canvas x:Name="MainHolder" Background="Gray" MinHeight="100" >
        <Grid x:Name="BasicLayout" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition    />
                <RowDefinition Height="30*" MaxHeight="70"  />
                <RowDefinition Height="40*" MaxHeight="70" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="210*"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Load an External Image" Grid.Column="0" Grid.Row="0"></TextBlock>
            <TextBox x:Name="ImageUrl" Text="http://www.fisiosaludsac.com/Facial/hilos.jpg" Grid.Row="0" Grid.Column="1" Width="300"></TextBox>
            <Button Grid.Column="2" Grid.Row="0" x:Name="BtnRandomHeight" Content="Modify the height" Click="BtnRandomHeight_Click" >
            </Button>
            <Canvas x:Name="ImageHolder" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"></Canvas>


        </Grid>
    </Canvas>


</UserControl>
